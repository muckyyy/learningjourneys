# ==================================================================
# Laravel Reverb WebSocket Configuration
# ==================================================================
# 
# DEVELOPMENT SETUP:
# - REVERB_HOST=127.0.0.1 (local IP)
# - REVERB_PORT=8080 (local development port)  
# - REVERB_SCHEME=http (no SSL for local)
# - REVERB_SERVER_HOST=127.0.0.1 (bind to localhost)
#
# PRODUCTION SETUP:
# - REVERB_HOST=your-domain.com (public domain)
# - REVERB_PORT=443 (HTTPS port)
# - REVERB_SCHEME=https (SSL enabled) 
# - REVERB_SERVER_HOST=0.0.0.0 (bind to all interfaces)
#
# REVERB_SERVER_* = Internal server binding (where Reverb process runs)
# REVERB_* = External client connection (what browsers connect to)
# ==================================================================

# For local development, use these settings:
REVERB_APP_ID=local_app_id
REVERB_APP_KEY=local_app_key
REVERB_APP_SECRET=local_app_secret
REVERB_HOST=127.0.0.1
REVERB_PORT=8080
REVERB_SCHEME=http
REVERB_MAX_REQUEST_SIZE=300000
REVERB_APP_MAX_MESSAGE_SIZE=300000
# Server Configuration (where Reverb server binds)
# For local development: 127.0.0.1 or 0.0.0.0
# For production: 0.0.0.0 (to listen on all interfaces)
REVERB_SERVER_HOST=127.0.0.1
REVERB_SERVER_PORT=8080

# Frontend compilation variables (automatically references above values)
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Mix variables for legacy webpack compilation
MIX_REVERB_APP_KEY="${REVERB_APP_KEY}"
MIX_REVERB_HOST="${REVERB_HOST}"
MIX_REVERB_PORT="${REVERB_PORT}"
MIX_REVERB_SCHEME="${REVERB_SCHEME}"

